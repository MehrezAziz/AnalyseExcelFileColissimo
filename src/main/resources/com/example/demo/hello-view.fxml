<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo.HelloController">

  <!-- Left VBox for Input and Buttons -->
  <VBox alignment="TOP_LEFT" spacing="20.0" maxWidth="150.0">
    <padding>
      <Insets bottom="20.0" left="20.0" right="0.0" top="20.0"/>
    </padding>

    <TextField fx:id="sentenceField" promptText="Write a sentence"/>
    <Button text="Save" onAction="#saveSentence"/>
    <Label text="Saved Sentences:"/>
    <TextArea fx:id="savedSentencesArea" minHeight="530" minWidth="180" maxWidth="220" editable="false" prefRowCount="10"/>
  </VBox>

  <!-- Center VBox for Display -->
  <VBox alignment="CENTER" spacing="20.0">
    <Label fx:id="welcomeText"/>
  </VBox>

  <!-- Drop Area VBox -->
  <VBox fx:id="dropArea" alignment="CENTER" spacing="20.0" style="-fx-border-color: black; -fx-border-width: 2;" minHeight="200.0" minWidth="200.0">
    <Label text="Drop a file here or click to select a file"/>
  </VBox>
</HBox>
